generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Post {
  id          String   @id @default(uuid()) @map("ref_publication") // ID in the database
  content     String   @map("contenu")                             // Content of the post
  createdAt   DateTime @default(now()) @map("date_creation")       // Creation date
  updatedAt   DateTime @updatedAt @map("date_modification")       // Modification date

  @@map("Publication") // The table name in the database is "Publication"
}
